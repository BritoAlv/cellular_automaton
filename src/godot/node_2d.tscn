@export var grid_size: int = 100 # Number of rows and columns (n x n grid)
@export var tile_size: Vector2 = Vector2(5, 5)  # Size of each tile (width, height)

func _ready():
	# Set the number of columns for the GridContainer
	columns = grid_size
	
	# Dynamically create the tiles
	for i in range(grid_size * grid_size):
		var tile = ColorRect.new()  # Create a new ColorRect node
		tile.color = Color(randf(), randf(), randf())  # Assign a random color
		tile.custom_minimum_size = tile_size  # Set the size of each tile
		add_child(tile)  # Add the tile to the GridContainer
